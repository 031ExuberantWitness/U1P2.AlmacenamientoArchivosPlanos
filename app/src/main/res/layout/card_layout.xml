<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/clinica" />

        <TextView android:id="@+id/item_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:layout_alignParentTop="true"
            android:textSize="30sp" />

        <TextView android:id="@+id/item_apellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/item_nombre"
            android:textSize="20sp" />

        <TextView android:id="@+id/item_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image"
            android:layout_below="@id/item_apellidos"
            android:textSize="20sp" />

        <TextView android:id="@+id/item_genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/item_edad"
            android:layout_below="@id/item_apellidos"
            android:textSize="20sp" />

        <TextView android:id="@+id/item_altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image"
            android:layout_below="@id/item_edad"
            android:textSize="20sp" />

        <TextView android:id="@+id/item_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/item_altura"
            android:layout_below="@id/item_edad"
            android:textSize="20sp" />

        <ImageButton android:id="@+id/btnEliminar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:backgroundTint="@color/white"
            android:layout_toEndOf="@id/btnModificar"
            android:layout_below="@id/item_image"/>

        <ImageButton android:id="@+id/btnModificar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/modificar"
            android:backgroundTint="@color/white"
            android:layout_below="@id/item_image" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>